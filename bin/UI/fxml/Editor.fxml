<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.SplitPane?>

<SplitPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="UI.controlador.EditorController"
           orientation="HORIZONTAL"
           dividerPositions="0.25"
           stylesheets="@../css/editor.css">

    <!-- Panel izquierdo: Explorador de archivos -->
    <VBox spacing="10" prefWidth="250" id="VBoxFiles" fx:id="panelIzquierdo">
        <Label text="Explorador de Archivos" style="-fx-font-weight: bold;"/>
        <TreeView fx:id="treeArchivos" prefHeight="600"/>
        <Button text="Refrescar" onAction="#refrescarExplorador"/>
    </VBox>

    <!-- Panel derecho: Área de código -->
    <VBox spacing="10" style="-fx-padding: 10;" id="VBoxEditor" fx:id="panelDerecho">
        <Label text="Editor de Código" />
        <TextArea fx:id="txtAreaCodigo" />
        <HBox spacing="10">
            <Button text="Compilar" onAction="#compilarCodigo"/>
            <Button text="Guardar" onAction="#guardarCodigo"/>
        </HBox>
    </VBox>

</SplitPane>


